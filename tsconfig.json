{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"paths": {
			"@/*": ["./src/*"],
			"@middlewares": ["./src/config/middlewares"],
			"@ui/*": ["./src/app/_ui/*"],
			"@fonts": ["./src/assets/fonts"],
			"@styles/*": ["./src/assets/styles/*"],
			"@modules/*": ["./src/modules/_shared/*"],
			"@common/*": ["./src/common/*"],
			"@routes": ["./src/config/routes"],
			"@providers": ["./src/config/providers"]
		},
		"skipLibCheck": true,
		"strict": true,
		"resolveJsonModule": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"exclude": ["node_modules"],
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"plugins": [
		{
			"name": "next"
		}
	],
	"resolveJsonModule": true,
	"skipLibCheck": true,
	"strict": true,
	"target": "es5"
}
